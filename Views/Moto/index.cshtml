@model IEnumerable<ProjetoMVC.Models.Moto>

@{
    ViewData["Title"] = "Lista de Items";
}

<h2>Moto</h2>

<p>
    <a asp-action="Criar">Novo Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>                                    
            <th>
                @Html.DisplayNameFor(model => model.Kilometragem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Litros)
            </th>                        
            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Onde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KmAndado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Media)
            </th>                                    
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Kilometragem)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Litros)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Tags)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Onde)
                </td>
                <td>
                    @Html.DisplayFor(model => item.KmAndado)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Media)
                </td>                                                                                                                                                
            </tr>
        }
    </tbody>
</table>

